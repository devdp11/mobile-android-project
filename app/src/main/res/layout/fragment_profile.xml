<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:text="@string/profile_title"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/textViewPerfil"
            android:background="@drawable/circle"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:scaleType="centerCrop"
            android:padding="30dp"
            android:src="@drawable/profile" />

        <ImageView
            android:id="@+id/imageChangePic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/imageViewProfile"
            android:layout_alignBottom="@+id/imageViewProfile"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/circle_white"
            android:padding="8dp"
            android:src="@drawable/changepic" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewPerfil"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="90dp"
            android:layout_toStartOf="@+id/imageViewProfile"
            android:text="@string/hi"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/viewOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewProfile"
            android:background="@drawable/profile_border"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="70dp"
            android:padding="10dp"
            >

            <LinearLayout
                android:id="@+id/editProfileLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageEditProfile"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/edit_profile" />

                <Button
                    android:id="@+id/editProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:background="@android:color/transparent"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/edit_profile"
                    android:padding="0dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textAllCaps="false"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/notificationsLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/editProfileLayout"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editProfileLayout">

                <ImageView
                    android:id="@+id/imageNotifications"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/notifications" />

                <Button
                    android:id="@+id/notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:background="@android:color/transparent"
                    android:fontFamily="sans-serif-medium"
                    android:padding="0dp"
                    android:text="@string/notifications"
                    android:textColor="@android:color/black"
                    android:textAllCaps="false"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#1573FE"
                    android:text="ON/OFF"
                    android:gravity="center|right"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/notificationsLayout">

                <ImageView
                    android:id="@+id/imageLanguage"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/language" />


                <Button
                    android:id="@+id/language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:background="@android:color/transparent"
                    android:fontFamily="sans-serif-medium"
                    android:padding="0dp"
                    android:text="@string/language"
                    android:textColor="@android:color/black"
                    android:textAllCaps="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/notifications" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="English"
                    android:textColor="#1573FE"
                    android:gravity="center|right"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/viewOptions2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewOptions"
            android:background="@drawable/profile_border"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            >

            <LinearLayout
                android:id="@+id/securityLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageSecurity"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/security" />

                <Button
                    android:id="@+id/security"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/security"
                    android:padding="0dp"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textAllCaps="false"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/themeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/securityLayout">

                <ImageView
                    android:id="@+id/imageTheme"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/theme" />

                <Button
                    android:id="@+id/theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/theme"
                    android:padding="0dp"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textAllCaps="false"
                    android:textSize="14sp"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/mode"
                    android:textColor="#1573FE"
                    android:gravity="center|right"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="14sp" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>



</FrameLayout>
