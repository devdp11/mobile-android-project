<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Androidstudioproject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#351431</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="CustomDatePickerDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/main</item>
        <item name="android:textColorPrimary">@color/main</item>
        <item name="android:textColorSecondary">@color/main</item>
    </style>

    <style name="nightmodeswitch" parent="Theme.AppCompat.Light" >
        <item name="colorControlActivated" > @color/nightmode </item>
        <item name="colorSwitchThumbNormal" > @color/white </item>
        <item name="android:colorForeground" > #99FFFFFF </item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorAccent">@color/primary_color</item>
    </style>


</resources>