<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.AppCompat.DayNight" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#351431</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here -->

    </style>
    <style name="TransparentDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">cut</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/datepickerColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="materialButtonStyle">@style/Widget.Custom.MaterialCalendar.Button</item>
        <item name="materialCalendarStyle">@style/RangeFillColor</item>
    </style>

    <style name="RangeFillColor"  parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="rangeFillColor">@color/datepickerRange</item>
    </style>

    <style name="Widget.Custom.MaterialCalendar.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="nightmodeswitch" parent="Theme.AppCompat.DayNight" >
        <item name="colorControlActivated">@color/nightmode</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorAccent">@color/primary_color</item>
    </style>


</resources>
